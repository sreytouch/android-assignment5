<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/mater_grey_300"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    tools:ignore="UselessParent"
    tools:context=".ui.ShoppingCategoryActivity">

    <TextView
        android:id="@+id/welcome_message"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/horizontal_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/horizontal_margin_8"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="7dp"
                app:cardElevation="22dp">
                <LinearLayout
                    android:clickable="true"
                    android:onClick="onElectronicsClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:focusable="true"
                    tools:ignore="UsingOnClickInXml">
                    <ImageView
                        android:contentDescription="@string/electronics"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/electronics_category"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"
                        android:text="@string/electronics"
                        android:fontFamily="sans-serif-black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/horizontal_margin_8"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="7dp"
                app:cardElevation="22dp">
                <LinearLayout
                    android:onClick="onClothesClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UsingOnClickInXml">
                    <ImageView
                        android:contentDescription="@string/clothes"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/clothes_category"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"
                        android:text="@string/clothes"
                        android:fontFamily="sans-serif-black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/horizontal_20"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/horizontal_margin_8"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="7dp"
                app:cardElevation="22dp">
                <LinearLayout
                    android:onClick="onBeautyClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UsingOnClickInXml">
                    <ImageView
                        android:contentDescription="@string/beauty"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/beauty_category"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:text="@string/beauty"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/horizontal_margin_8"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="7dp"
                app:cardElevation="22dp">
                <LinearLayout
                    android:onClick="onFoodClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UsingOnClickInXml">
                    <ImageView
                        android:contentDescription="@string/clothes"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/food_category"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:text="@string/food"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>